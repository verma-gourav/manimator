FROM node:20-bookworm-slim

RUN corepack enable

RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/* 

WORKDIR /app

COPY package.json pnpm-lock.yaml* tsconfig.json ./

RUN pnpm install --frozen-lockfile

COPY src ./src

RUN pnpm run build

EXPOSE 5000

CMD ["node", "dist/index.js"]